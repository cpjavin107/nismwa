<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar_gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparentFiftyBlack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtShape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border_fill_white"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:drawableTint="@android:color/black"
                android:hint="Select Shape"
                android:padding="12dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorEditHint"
                android:textSize="15dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtQuantityHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="No. of pieces"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="3"
                android:background="@drawable/button_border_fill_white"
                android:hint="Quantity"
                android:inputType="number"
                android:padding="12dp"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorEditHint"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/llThickness2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtThickness2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thickness"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etThicknessValue2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="3"
                        android:background="@drawable/button_border_fill_white"
                        android:hint="Select"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorEditHint"
                        android:textSize="15dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtUnitThickness2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="2"
                        android:background="@drawable/button_border_fill_white"
                        android:drawableTint="@android:color/black"
                        android:hint="UNIT"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llThickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtThickness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thickness"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtThicknessValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="3"
                        android:background="@drawable/button_border_fill_white"
                        android:hint="Select"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorEditHint"
                        android:textSize="15dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtUnitThickness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="2"
                        android:background="@drawable/button_border_fill_white"
                        android:drawableTint="@android:color/black"
                        android:hint="UNIT"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Width"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etWidth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="3"
                        android:background="@drawable/button_border_fill_white"
                        android:hint="Select"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorEditHint"
                        android:textSize="15dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtUnitWidth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="2"
                        android:background="@drawable/button_border_fill_white"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:drawableTint="@android:color/black"
                        android:hint="UNIT"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Length"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etLength"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="3"
                        android:background="@drawable/button_border_fill_white"
                        android:hint="Select"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorEditHint"
                        android:textSize="15dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtUnitLength"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="2"
                        android:background="@drawable/button_border_fill_white"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:drawableTint="@android:color/black"
                        android:hint="UNIT"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtForgotPassword"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorButtonOrange"
                android:gravity="center"
                android:padding="12dp"
                android:text="Calculate"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorEditHint"
                android:textSize="15dp"
                android:visibility="gone" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>