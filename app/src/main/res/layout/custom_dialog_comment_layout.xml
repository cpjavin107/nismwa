<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNavGray"
    android:orientation="vertical">

    <include
        layout="@layout/common_progressbar"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:padding="10dp"
        android:text="Edit comment"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_margin="5dp"
        android:background="@drawable/button_border_circle"
        android:gravity="center_vertical"
        android:hint="Write here..."
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="5"
        android:padding="10dp"
        android:textColor="@color/colorButtonBlue"
        android:textColorHint="@color/colorEditHint"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDialog"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="2">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border_circle"
            android:gravity="center"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="@color/colorBackground"
            android:textSize="16dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border_circle"
            android:gravity="center"
            android:padding="10dp"
            android:text="Update"
            android:textColor="@color/colorTransparentGreen"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>
